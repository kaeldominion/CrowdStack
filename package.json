{
  "name": "crowdstack",
  "version": "1.0.0",
  "private": true,
  "description": "CrowdStack - Event management platform",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "concurrently -n \"WEB,APP\" -c \"cyan,magenta\" \"pnpm --filter web dev\" \"pnpm --filter app dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:app": "pnpm --filter app dev",
    "dev:all": "concurrently -n \"WEB,APP\" -c \"cyan,magenta\" \"pnpm --filter web dev\" \"pnpm --filter app dev\"",
    "dev:all:npx": "concurrently -n \"WEB,APP\" -c \"cyan,magenta\" \"npx -y pnpm@8.15.0 --filter web dev\" \"npx -y pnpm@8.15.0 --filter app dev\"",
    "start": "./scripts/start-dev.sh",
    "build": "pnpm -r build",
    "build:web": "npx -y pnpm@8.15.0 --filter web build",
    "build:app": "npx -y pnpm@8.15.0 --filter app build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "check-fix": "node scripts/watch-and-fix.js",
    "check-fix:sh": "./scripts/check-and-fix.sh",
    "watch-fix": "node scripts/auto-fix-watch.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

