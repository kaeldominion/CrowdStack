{
  "name": "crowdstack",
  "version": "1.0.0",
  "private": true,
  "description": "CrowdStack - Event management platform",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter unified dev",
    "dev:unified": "pnpm --filter unified dev",
    "dev:web": "pnpm --filter web dev",
    "dev:app": "pnpm --filter app dev",
    "dev:all": "concurrently -n \"WEB,APP\" -c \"cyan,magenta\" \"pnpm --filter web dev\" \"pnpm --filter app dev\"",
    "start": "./scripts/start-dev.sh",
    "build": "pnpm -r build",
    "build:unified": "npx -y pnpm@8.15.0 --filter unified build",
    "build:web": "npx -y pnpm@8.15.0 --filter web build",
    "build:app": "npx -y pnpm@8.15.0 --filter app build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "check-fix": "node scripts/watch-and-fix.js",
    "check-fix:sh": "./scripts/check-and-fix.sh",
    "watch-fix": "node scripts/auto-fix-watch.js",
    "pre-push": "./scripts/pre-push-check.sh",
    "typecheck:unified": "cd apps/unified && npx tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

